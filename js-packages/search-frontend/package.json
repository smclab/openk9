{
  "name": "@openk9ui/search-frontend",
  "version": "3.1.12-SNAPSHOT",
  "author": "SMC",
  "description": "OpenK9 search UI customizable widget",
  "type": "module",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.es.js"
    },
    "./importable": {
      "default": "./dist/importable.js"
    },
    "./embeddable": {
      "default": "./dist/embeddable.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "search",
    "ui",
    "widget",
    "openk9"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smclab/openk9.git",
    "directory": "js-packages/search-frontend"
  },
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/smclab/openk9/issues"
  },
  "homepage": "https://openk9.io/",
  "scripts": {
    "dev": "vite --config vite/standalone.dev.ts ",
    "build": "tsc && yarn build:standalone && yarn build:embeddable && yarn build:importable",
    "build:standalone": "vite build --config vite/standalone.prod.ts && cp public/* dist/",
    "build:embeddable": "vite build --config vite/embeddable.prod.ts",
    "build:importable": "vite build --config vite/importable.dev.ts && rollup -c",
    "build:embeddable:dev": "vite build --config vite/embeddable.dev.ts",
    "build:keycloak": "cross-env VITE_KEYCLOAK_ENABLED=true VITE_CHATBOT_ENABLED=false vite build --config vite/standalone.prod.ts --mode production && cp public/* dist/",
    "build:nokeycloak": "cross-env VITE_KEYCLOAK_ENABLED=false VITE_CHATBOT_ENABLED=false vite build --config vite/standalone.prod.ts --mode production && cp public/* dist/",
    "build:chatbot": "cross-env VITE_KEYCLOAK_ENABLED=true VITE_CHATBOT_ENABLED=true vite build --config vite/standalone.prod.ts --mode production && cp public/* dist/",
    "preview": "vite preview --config vite/standalone.dev.ts",
    "lint": "eslint --ext js,ts,tsx src",
    "format": "prettier --list-different --write \"{scripts,src}/**/*.{js,md,tsx,ts,html,json}\"",
    "precommit": "lint-staged",
    "prepare": "cross-env NODE_ENV=production yarn build"
  },
  "targets": {
    "main": false
  },
  "peerDependencies": {
    "@types/react-date-range": "^1.4.10",
    "@types/react-dates": "^21.8.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/runtime": "^7.28.4",
    "@fortawesome/fontawesome-svg-core": "7.1.0",
    "@fortawesome/free-brands-svg-icons": "7.1.0",
    "@fortawesome/free-solid-svg-icons": "7.1.0",
    "@fortawesome/react-fontawesome": "3.1.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.1",
    "@types/keycloak-js": "^3.4.1",
    "@types/lodash": "^4.14.178",
    "@types/luxon": "^2.3.2",
    "@types/moment": "^2.13.0",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.5",
    "@types/react-date-range": "^1.4.3",
    "@types/react-dates": "^21.8.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-select": "^5.0.1",
    "@types/sanitize-html": "^2.9.0",
    "@types/styled-components": "^5.1.14",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-plugin-styled-components": "^1.13.2",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.2",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-prettier": "^3.1.4",
    "keycloak-js": "25.0.6",
    "lint-staged": "^12.1.2",
    "lodash": "^4.17.21",
    "luxon": "^2.4.0",
    "moment": "^2.30.1",
    "overlayscrollbars": "^1.13.1",
    "overlayscrollbars-react": "^0.2.3",
    "prettier": "^2.5.1",
    "react": "^19.2.0",
    "react-click-away-listener": "^2.0.3",
    "react-date-range": "^1.4.0",
    "react-dates": "^21.8.0",
    "react-dom": "^19.2.0",
    "react-intersection-observer": "^8.32.0",
    "react-markdown": "^9.0.1",
    "react-query": "^3.38.0",
    "react-select": "^5.3.2",
    "react-virtuoso": "^2.2.7",
    "rollup": "^4.53.2",
    "rollup-plugin-dts": "^6.2.3",
    "styled-components": "^6.1.19",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@openk9ui/openk9-chatbot": "npm:@openk9ui/openk9-chatbot@3.1.1-SNAPSHOT",
    "i18next": "^22.5.1",
    "react-i18next": "^12.3.1",
    "sanitize-html": "^2.11.0"
  }
}
