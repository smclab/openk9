			<artifactId>tika-common</artifactId>
		</dependency>
		<dependency>
			<groupId>io.openk9</groupId>
			<artifactId>resources-common</artifactId>
		</dependency>
	</dependencies>


  <scm>
    <tag>v1.1.4</tag>
