<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
	logicalFilePath="2025/10/15.xml">

	<changeSet id="1760516822-1" author="openk9">

		<createTable tableName="tenant">
			<column name="id" type="BIGINT">
				<constraints nullable="false" primaryKeyName="pk_tenant" primaryKey="true"/>
			</column>
			<column name="tenant_id" type="VARCHAR(100)">
				<constraints nullable="false" uniqueConstraintName="uq_tenant_id" unique="true"/>
			</column>
			<column name="host_name" type="VARCHAR(100)">
				<constraints nullable="false"/>
			</column>
			<column name="issuer_uri" type="VARCHAR(200)">
			</column>
			<column name="client_id" type="VARCHAR(100)">
			</column>
			<column name="client_secret" type="VARCHAR(100)">
			</column>
		</createTable>

	</changeSet>

	<changeSet id="1760516822-2" author="openk9">

		<createTable tableName="api_key">
			<column name="id" type="BIGINT">
				<constraints nullable="false" primaryKeyName="pk_api_key" primaryKey="true"/>
			</column>
			<column name="tenant_id" type="VARCHAR(100)">
				<constraints
					nullable="false"
					foreignKeyName="fk_api_key_tenant"
					referencedTableName="tenant"
					referencedColumnNames="tenant_id"
				/>
			</column>
			<column name="api_key_hash" type="VARCHAR(64)">
				<constraints nullable="false"/>
			</column>
			<column name="checksum" type="VARCHAR(32)">
				<constraints nullable="false"/>
			</column>
		</createTable>

	</changeSet>

	<changeSet id="1760516822-3" author="openk9">

		<createTable tableName="route_security">
			<column name="id" type="BIGINT">
				<constraints nullable="false" primaryKeyName="pk_route_security" primaryKey="true"/>
			</column>
			<column name="tenant_id" type="VARCHAR(100)">
				<constraints
					nullable="false"
					foreignKeyName="fk_route_security_tenant"
					referencedTableName="tenant"
					referencedColumnNames="tenant_id"
				/>
			</column>
			<column name="route" type="VARCHAR(100)">
				<constraints nullable="false"/>
			</column>
			<column name="authorization_scheme" type="VARCHAR(100)">
				<constraints nullable="false"/>
			</column>
		</createTable>

	</changeSet>

	<changeSet id="1760516822-4" author="openk9">

		<createIndex tableName="api_key" indexName="idx_api_key_tenant_id">
			<column name="tenant_id"/>
		</createIndex>
		<createIndex tableName="route_security" indexName="idx_route_security_tenant_id">
			<column name="tenant_id"/>
		</createIndex>

	</changeSet>

</databaseChangeLog>
