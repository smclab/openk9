<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.openk9.app</groupId>
    <artifactId>app</artifactId>
	  <version>3.1.0-SNAPSHOT</version>
  </parent>
  <artifactId>tenant-manager</artifactId>
  <name>OpenK9 :: App :: Tenant Manager</name>

  <dependencies>

    <!-- // jpa -->
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-hibernate-reactive</artifactId>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-reactive-pg-client</artifactId>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-reactive-oracle-client</artifactId>
    </dependency>

    <dependency>
      <groupId>io.openk9.common</groupId>
      <artifactId>model</artifactId>
    </dependency>
    <!-- jpa // -->

    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-scheduler</artifactId>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-cache</artifactId>
    </dependency>

    <!-- realm management -->
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-keycloak-admin-rest-client</artifactId>
    </dependency>

    <!-- authetication -->
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-oidc</artifactId>
    </dependency>

    <!-- // API -->
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-smallrye-openapi</artifactId>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-smallrye-graphql</artifactId>
    </dependency>
    <dependency>
      <groupId>io.openk9.common</groupId>
      <artifactId>graphql-util</artifactId>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-hibernate-validator</artifactId>
    </dependency>
    <!-- API // -->

    <!-- // schema migrations -->
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-liquibase</artifactId>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-jdbc-postgresql</artifactId>
      <exclusions>
        <exclusion>
          <groupId>io.quarkus</groupId>
          <artifactId>quarkus-agroal</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>io.openk9.common</groupId>
      <artifactId>datasource-model</artifactId>
    </dependency>
    <!-- schema migrations // -->

    <!-- realm template -->
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-qute</artifactId>
    </dependency>

    <!-- // standalone -->
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-smallrye-stork</artifactId>
    </dependency>
    <dependency>
      <groupId>io.smallrye.stork</groupId>
      <artifactId>stork-service-discovery-eureka</artifactId>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-smallrye-fault-tolerance</artifactId>
    </dependency>
	  <!-- standalone // -->

    <!-- implements -->
    <dependency>
      <groupId>io.openk9.client.grpc</groupId>
      <artifactId>tenant-manager-client-grpc</artifactId>
    </dependency>

    <!-- // consumes -->
    <dependency>
      <groupId>io.openk9.client.grpc</groupId>
      <artifactId>datasource-client-grpc</artifactId>
    </dependency>
    <dependency>
      <groupId>io.openk9.client.grpc</groupId>
      <artifactId>app-manager</artifactId>
    </dependency>
    <!-- consumes // -->

    <!-- // pekko framework -->
    <dependency>
      <groupId>org.apache.pekko</groupId>
      <artifactId>pekko-actor-typed_${scala.version}</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.pekko</groupId>
      <artifactId>pekko-cluster-typed_${scala.version}</artifactId>
    </dependency>
    <!-- pekko framework // -->

    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
    </dependency>
    <dependency>
      <groupId>org.mapstruct</groupId>
      <artifactId>mapstruct</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.pekko</groupId>
      <artifactId>pekko-actor-testkit-typed_${scala.version}</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>io.smallrye</groupId>
        <artifactId>jandex-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${surefire-plugin.version}</version>
      </plugin>
      <plugin>
        <groupId>io.quarkus</groupId>
        <artifactId>quarkus-maven-plugin</artifactId>
        <version>${quarkus-plugin.version}</version>
		  <executions>
			  <!-- default configuration is for postgresql -->
			  <execution>
				  <goals>
					  <goal>build</goal>
				  </goals>
			  </execution>
			  <execution>
				  <id>oracle</id>
				  <goals>
					  <goal>build</goal>
				  </goals>
				  <configuration>
					  <properties>
						  <quarkus.profile>prod,prod-oracle</quarkus.profile>
						  <quarkus.package.output-directory>
							  quarkus-app-oracle
						  </quarkus.package.output-directory>
						  <quarkus.container-image.name>
							  openk9-tenant-manager-oracle
						  </quarkus.container-image.name>
					  </properties>
				  </configuration>
			  </execution>
		  </executions>
      </plugin>
    </plugins>
  </build>
</project>
