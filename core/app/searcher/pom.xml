<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.openk9.app</groupId>
    <artifactId>app</artifactId>
	  <version>3.1.0-SNAPSHOT</version>
  </parent>
  <artifactId>searcher</artifactId>
  <name>OpenK9 :: App :: Searcher</name>
  <dependencies>
	  <dependency>
		  <groupId>io.quarkus</groupId>
		  <artifactId>quarkus-smallrye-openapi</artifactId>
	  </dependency>

	  <!-- // OpenSearch -->
	  <dependency>
		  <groupId>io.quarkiverse.opensearch</groupId>
		  <artifactId>quarkus-opensearch-rest-high-level-client</artifactId>
	  </dependency>
	  <dependency>
		  <groupId>io.quarkiverse.opensearch</groupId>
		  <artifactId>quarkus-opensearch-java-client</artifactId>
	  </dependency>
	  <!-- OpenSearch // -->

	  <!-- // authentication -->
	  <dependency>
		  <groupId>io.openk9.service</groupId>
		  <artifactId>auth-service</artifactId>
	  </dependency>
	  <!-- authentication // -->

	  <!-- consumes -->
	  <dependency>
		  <groupId>io.openk9.client.grpc</groupId>
		  <artifactId>searcher-client-grpc</artifactId>
	  </dependency>

	  <dependency>
		  <groupId>org.projectlombok</groupId>
		  <artifactId>lombok</artifactId>
		  <scope>provided</scope>
	  </dependency>
	  <dependency>
		  <groupId>org.mapstruct</groupId>
		  <artifactId>mapstruct</artifactId>
		  <scope>provided</scope>
	  </dependency>
	  <dependency>
		  <groupId>org.apache.commons</groupId>
		  <artifactId>commons-lang3</artifactId>
	  </dependency>

	  <!-- // standalone -->
	  <dependency>
		  <groupId>io.quarkus</groupId>
		  <artifactId>quarkus-smallrye-stork</artifactId>
	  </dependency>
	  <dependency>
		  <groupId>io.smallrye.stork</groupId>
		  <artifactId>stork-service-discovery-eureka</artifactId>
	  </dependency>
	  <!-- standalone //-->

	  <dependency>
		  <groupId>io.openk9.common</groupId>
		  <artifactId>model</artifactId>
	  </dependency>


  </dependencies>


  <build>
    <plugins>
      <plugin>
        <groupId>io.smallrye</groupId>
        <artifactId>jandex-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${surefire-plugin.version}</version>
      </plugin>
      <plugin>
        <groupId>io.quarkus</groupId>
        <artifactId>quarkus-maven-plugin</artifactId>
        <version>${quarkus-plugin.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>build</goal>
              <goal>generate-code</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>