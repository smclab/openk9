<databaseChangeLog
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
	objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
	logicalFilePath="db/datasource/2025/11/12-01-changelog.xml"
>

	<changeSet id="1762944829866-1" author="openk9">
		<createTable tableName="autocomplete">
			<column name="id" type="NUMBER(38)">
				<constraints
						nullable="false"
						primaryKey="true"
						primaryKeyName="autocomplete_pkey"/>
			</column>
			<column name="create_date" type="TIMESTAMP"/>
			<column name="modified_date" type="TIMESTAMP"/>
			<column name="description" type="VARCHAR2(4000)"/>
			<column name="name" type="VARCHAR2(255)">
				<constraints nullable="false"/>
			</column>
			<column name="fallback_result_size" type="NUMBER(10)" defaultValueNumeric="10">
				<constraints nullable="false"/>
			</column>
			<column name="fuzziness" type="VARCHAR2(255)" defaultValue="AUTO">
				<constraints nullable="false"/>
			</column>
			<column name="minimum_should_match" type="VARCHAR2(255)" defaultValue="75%">
				<constraints nullable="false"/>
			</column>
			<column name="operator" type="VARCHAR2(255)" defaultValue="or">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="1762944829866-2" author="openk9">
		<createTable tableName="autocomplete_doc_type_field">
			<column name="autocomplete_id" type="NUMBER(38)">
				<constraints nullable="false" primaryKey="true"
				             primaryKeyName="autocomplete_doc_type_field_pkey"/>
			</column>
			<column name="doc_type_field_id" type="NUMBER(38)">
				<constraints nullable="false" primaryKey="true"
				             primaryKeyName="autocomplete_doc_type_field_pkey"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="1762944829866-3" author="openk9">
		<addForeignKeyConstraint baseColumnNames="autocomplete_id"
		                         baseTableName="autocomplete_doc_type_field"
		                         constraintName="fk_autocomplete_doc_type_field"
		                         onDelete="NO ACTION" onUpdate="NO ACTION"
		                         referencedColumnNames="id"
		                         referencedTableName="autocomplete"/>

		<addForeignKeyConstraint baseColumnNames="doc_type_field_id"
		                         baseTableName="autocomplete_doc_type_field"
		                         constraintName="fk_doc_type_field_autocomplete"
		                         onDelete="NO ACTION" onUpdate="NO ACTION"
		                         referencedColumnNames="id"
		                         referencedTableName="doc_type_field"/>
	</changeSet>
</databaseChangeLog>