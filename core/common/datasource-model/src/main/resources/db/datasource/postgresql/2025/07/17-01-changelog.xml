<databaseChangeLog
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
	objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
	logicalFilePath="db/datasource/2025/07/17-01-changelog.xml"
>

	<changeSet id="1752747021998-1" author="openk9">
		<createTable tableName="autocorrection">
			<column name="id" type="BIGINT">
				<constraints
						nullable="false"
						primaryKey="true"
						primaryKeyName="autocorrection_pkey"/>
			</column>
			<column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
			<column name="modified_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
			<column name="description" type="VARCHAR(4096)"/>
			<column name="name" type="VARCHAR(255)">
				<constraints nullable="false"/>
			</column>
			<column name="autocorrection_doc_type_field_id" type="BIGINT"/>
			<column name="sort" type="VARCHAR(255)">
				<constraints nullable="false"/>
			</column>
			<column name="suggest_mode" type="VARCHAR(255)">
				<constraints nullable="false"/>
			</column>
			<column name="prefix_length" type="INTEGER"/>
			<column name="min_word_length" type="INTEGER"/>
			<column name="max_edit" type="INTEGER"/>
			<column name="enable_search_with_correction" type="BOOLEAN"/>
		</createTable>
	</changeSet>

</databaseChangeLog>