<databaseChangeLog
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
	objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
	logicalFilePath="db/datasource/2025/12/03-01-changelog.xml"
>

	<changeSet id="1764751952025-1" author="openk9">
		<addColumn tableName="autocomplete">
			<column name="result_size" defaultValueNumeric="10">
				<constraints nullable="false"/>
			</column>
		</addColumn>
	</changeSet>

	<changeSet id="1764751952025-2" author="openk9">
		<update tableName="autocomplete">
			<column name="result_size" valueComputed="fallback_result_size"/>
		</update>
	</changeSet>

	<changeSet id="1764751952025-3" author="openk9">
		<dropColumn tableName="autocomplete" columnName="fallback_result_size"/>
	</changeSet>
</databaseChangeLog>