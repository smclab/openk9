<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
	logicalFilePath="db/datasource/2026/02/03-01-changelog.xml">

	<changeSet id="1770125998273-1" author="openk9">
		<comment>Updates fuzziness values according to the Autocomplete Entity</comment>

		<update tableName="autocomplete">
			<column name="fuzziness" value="ZERO"/>
			<where>fuzziness = '0'</where>
		</update>
		<update tableName="autocomplete">
			<column name="fuzziness" value="ONE"/>
			<where>fuzziness = '1'</where>
		</update>
		<update tableName="autocomplete">
			<column name="fuzziness" value="TWO"/>
			<where>fuzziness = '2'</where>
		</update>
		<!-- All other unexpected values are set to AUTO -->
		<update tableName="autocomplete">
			<column name="fuzziness" value="AUTO"/>
			<where>fuzziness NOT IN ('ZERO', 'ONE', 'TWO', 'AUTO') OR fuzziness IS NULL</where>
		</update>
	</changeSet>

</databaseChangeLog>