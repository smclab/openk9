<databaseChangeLog
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
	objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
	logicalFilePath="db/datasource/2025/10/13-01-changelog.xml"
>

	<changeSet id="1760348860193-1" author="openk9">
		<addColumn tableName="scheduler">
			<column name="reindex" type="NUMBER(1)" valueBoolean="false"/>
		</addColumn>
	</changeSet>

	<changeSet id="1760348860193-2" author="openk9">
		<sql>
			UPDATE scheduler s
			SET reindex = 1
			WHERE s.new_data_index_id IS NOT NULL;
		</sql>
	</changeSet>

</databaseChangeLog>