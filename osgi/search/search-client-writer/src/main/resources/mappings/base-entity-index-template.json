{
   "priority":1,
   "index_patterns":[
      "*-entity"
   ],
   "template":{
      "settings":{
         "index":{
            "number_of_shards":"1",
            "number_of_replicas":"1",
            "highlight" : {
               "max_analyzed_offset" : "10000000"
            }
         },
         "analysis":{
            "analyzer":{
               "email_apex_filter":{
                  "tokenizer":"uax_url_email",
                  "char_filter":[
                     "apex_char_filter"
                  ]
               },
               "standard_lowercase_italian_stop_words_filter": {
                  "tokenizer": "standard",
                  "filter": [
                     "lowercase",
                     "italian_stop_words_filter"
                  ],
                  "char_filter":[
                     "apex_char_filter",
                     "underscore_char_filter"
                  ]
               },
               "standard_lowercase_english_stop_words_filter": {
                  "tokenizer": "standard",
                  "filter": [
                     "lowercase",
                     "english_stop_words_filter"
                  ],
                  "char_filter":[
                     "apex_char_filter",
                     "underscore_char_filter"
                  ]
               }
            },
            "filter": {
               "italian_stop_words_filter": {
                  "type": "stop",
                  "stopwords":"_italian_"
               },
               "english_stop_words_filter": {
                  "type": "stop",
                  "stopwords":"_english_"
               }
            },
            "char_filter":{
               "apex_char_filter":{
                  "type":"mapping",
                  "mappings":[
                     "' => ,"
                  ]
               },
               "underscore_char_filter":{
                  "type":"mapping",
                  "mappings":[
                     "_ => ,"
                  ]
               }
            }
         }
      },
      "mappings":{
         "properties":{
            "name":{
               "type":"text",
               "analyzer":"standard_lowercase_italian_stop_words_filter",
               "fields":{
                  "keyword":{
                     "type":"keyword",
                     "ignore_above":256
                  },
                  "searchasyou":{
                     "type":"search_as_you_type"
                  }
               }
            },
            "type":{
               "type":"text",
               "fields":{
                  "keyword":{
                     "type":"keyword",
                     "ignore_above":256
                  }
               }
            }
         }
      }
   }
}
