{
	"template": {
		"settings": {
			"index": {
				"number_of_shards": "1",
				"number_of_replicas": "1",
				"highlight" : {
					"max_analyzed_offset" : "10000000"
				}
			},
			"analysis" : {
				"analyzer": {
					"email": {
						"tokenizer": "uax_url_email"
					},
					"standard_lowercase_italian_stop_words_filter": {
						"tokenizer": "standard",
						"filter": [
							"lowercase",
							"italian_stop_words_filter"
						],
						"char_filter":[
							"apex_char_filter",
							"underscore_char_filter"
						]
					},
					"standard_lowercase_english_stop_words_filter": {
						"tokenizer": "standard",
						"filter": [
							"lowercase",
							"english_stop_words_filter"
						],
						"char_filter":[
							"apex_char_filter",
							"underscore_char_filter"
						]
					}
				},
				"filter": {
					"italian_stop_words_filter": {
						"type": "stop",
						"stopwords":"_italian_"
					},
					"english_stop_words_filter": {
						"type": "stop",
						"stopwords":"_english_"
					}
				},
				"char_filter":{
					"apex_char_filter":{
						"type":"mapping",
						"mappings":[
							"' => ,"
						]
					},
					"underscore_char_filter":{
						"type":"mapping",
						"mappings":[
							"_ => ,"
						]
					}
				}
			}
		},
		"mappings": {
			"properties": {
				"acl": {
					"properties": {
						"allow": {
							"properties": {
								"users": {
									"type": "keyword"
								}
							}
						}
					}
				},
				"contentId": {
					"type": "keyword",
					"index": true
				},
				"datasourceId": {
					"type": "keyword",
					"index": true
				},
				"datasourceName": {
					"type": "keyword",
					"index": true
				},
				"documentTypes": {
					"type": "keyword",
					"index": true
				},
				"entities": {
					"properties": {
						"entityType": {
							"type": "keyword"
						},
						"context": {
							"type": "keyword"
						},
						"id": {
							"type": "keyword"
						}
					}
				},
				"rawContent": {
					"type": "text",
					"index": false
				},
				"resources" : {
					"properties": {
						"binaries" : {
							"type": "nested",
							"properties": {
								"id": {
									"type": "keyword"
								},
								"name" : {
									"type" : "text"
								},
								"contentType" : {
									"type" : "keyword"
								},
								"data" : {
									"type" : "binary",
									"index": false
								}
							}
						}
					}
				}
			}
		}
	}
}